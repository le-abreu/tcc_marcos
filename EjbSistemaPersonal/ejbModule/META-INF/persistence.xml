<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="atividadefisica">
		<jta-data-source>java:/MySQLDS</jta-data-source>
		
		<class>br.com.atividadefisica.model.Pessoa</class>
		<class>br.com.atividadefisica.model.Aluno</class>
		<class>br.com.atividadefisica.model.Anamnese</class>
		<class>br.com.atividadefisica.model.Avaliacao</class>
		<class>br.com.atividadefisica.model.Atividade</class>
		<class>br.com.atividadefisica.model.Endereco</class>
		<class>br.com.atividadefisica.model.Modalidade</class>
		<class>br.com.atividadefisica.model.Personal</class>
		<class>br.com.atividadefisica.model.Telefone</class>
		
		<properties>
			
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			
		</properties>
	</persistence-unit>
</persistence>

